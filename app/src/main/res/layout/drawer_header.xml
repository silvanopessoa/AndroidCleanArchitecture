<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="@dimen/drawable_layout_height"
  android:padding="@dimen/activity_margin"
  android:background="@color/colorPrimaryDark"
  android:gravity="bottom"
  android:orientation="vertical"
  android:theme="@style/ThemeOverlay.AppCompat.Dark">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/image_profile"
    android:layout_width="@dimen/drawable_layout_image_width"
    android:layout_height="@dimen/drawable_layout_image_height"
    android:src="@drawable/profile_empty"
    app:civ_border_color="#FFF"
    app:civ_border_width="1dp" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_small_views">

    <TextView
      android:id="@+id/text_profile_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/space_little_views"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:ellipsize="end"
      android:fontFamily="sans-serif-medium"
      android:maxLines="1"
      android:text="Tiago MissÃ£o"
      android:textColor="@color/white"
      android:textSize="@dimen/fontsize_subhead" />

    <TextView
      android:id="@+id/text_email"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/text_profile_name"
      android:ellipsize="end"
      android:fontFamily="sans-serif"
      android:maxLines="1"
      android:text="t.missao@gmail.com"
      android:textColor="@color/white"
      android:textSize="@dimen/fontsize_caption" />

  </RelativeLayout>

</LinearLayout>